# Environment Variables Configuration
# Copy this file to .env and fill in your values

# MongoDB Connection
MONGODB_URI=your_mongodb_atlas_uri_here

# JWT Secret Key (use a random secure string)
JWT_SECRET=your_jwt_secret_key_here_use_random_string

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5500

# Example MongoDB URI format:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/hotel-booking?retryWrites=true&w=majority

# Example JWT Secret (generate your own random string):
# JWT_SECRET=mySuperSecretJWT2024RandomString!@#$
